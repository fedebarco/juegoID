<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:textAppearance="?android:attr/textAppearanceListItemSmall"
    android:gravity="center_vertical"
    >
    <TextView
        android:id="@+id/quienpregunta"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/preguntaPregunta"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:ellipsize="start"
            android:singleLine="true" />

        <ImageButton
            android:id="@+id/botodos"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="0.5dp"
            android:adjustViewBounds="true"
            android:background="@color/cia"
            android:contentDescription="@string/Todos"
            android:padding="0.5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/todos" />
    </LinearLayout>
    <TextView
        android:id="@+id/quienresponde"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/respuestaPregunta"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_gravity="end"
            android:ellipsize="start"
            android:singleLine="true"
            android:inputType="text"
            android:autofillHints="Respuesta"
            tools:ignore="LabelFor" />
        <ImageButton
            android:id="@+id/aelPre"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:adjustViewBounds="true"
            android:contentDescription="@string/Todos"
            android:layout_margin="0.5dp"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/chulo"
            android:background="@color/cia"/>
    </LinearLayout>
</LinearLayout>